sudo ./gatee

open_file = false

while read -r line
do    
    if [[ -d $line ]]; then
        cd "$line"
        echo "Changed directory to $line";
        break;
    elif [[ -f $line ]]; then
        nano "$line" < /dev/tty ;
        echo "Opened $line with nano";
        open_file = true;
        break;
    else
        echo "ERROR.";
        break;
    fi
done < "/.gatee_cd"

if $open_file; then
    . runGatee
fi
